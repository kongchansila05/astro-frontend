---
interface Props { title: string; url: string; }
const { title, url } = Astro.props as Props;
const fb = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;
const tg = `https://t.me/share/url?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`;
---
<div style="display:flex; gap:.5rem; align-items:center;">
<a href={fb} rel="noopener" target="_blank">Share on Facebook</a>
<a href={tg} rel="noopener" target="_blank">Share on Telegram</a>
</div>